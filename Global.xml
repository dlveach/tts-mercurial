                  <Text id="score_table_row_4_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

      </TableLayout>
  </Panel>

</XmlLayout>
