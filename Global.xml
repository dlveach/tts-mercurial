    height="350" width="1120">
    <Panel id="inner_spell_cost_pnl"
      height="330" width="1100">
      <TableLayout class="dark_viewport" columnWidths="200 900">
        <Row preferredHeight="330">
          <Cell padding="5 5 5 5">
            <Image id="spell_cost_card_img" preserveAspect="true" image="" />
          </Cell>
          <Cell>
            <TableLayout class="dark_viewport">
              <Row preferredHeight="30" class="title_row">
                <Cell>
                  <Text fontSize="20" class="hud_header" text="Available resources to pay for spell:"/>
