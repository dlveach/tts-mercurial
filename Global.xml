                      <Cell/>
                      <Cell><Image id="spell_cost_mana_img" image="Mana" class="die_image_active" onClick="spellCostHandler"/></Cell>
                      <Cell><Text id="spell_cost_mana_txt" color="White" fontSize="24" text="10"/></Cell>
                      <Cell/>
