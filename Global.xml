                      <Cell><Image id="spell_cost_die_5_img" image="Water" class="die_image_active" onClick="spellCostHandler"/></Cell>
                      <Cell/>
                      <Cell><Image id="spell_cost_die_6_img" image="Lightning" class="die_image_active" onClick="spellCostHandler"/></Cell>
                      <Cell/>
                      <Cell><Image id="spell_cost_die_7_img" image="Lightning" class="die_image_active" onClick="spellCostHandler"/></Cell>
                    </Row>
                  </TableLayout>
                </Cell>
              </Row>
