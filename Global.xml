<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout UI/XmlLayout/Configuration/XmlLayout.xsd">

  <Include src="XML_defaults.xml"/>

<Defaults>
  <TableLayout
    autoCalculateHeight="true"
    useGlobalCellPadding="false" />
  <TableLayout class="dark_viewport"
    image="Sprites/Layout/Viewport"
    color="#301616" />
  <Row
    dontUseTableRowBackground="true" />
  <Row class="title_row"
    image="Sprites/Layout/Title"
    color="rgb(0.7,0.3,0)" />
  <!-- Cell dontUseTableCellBackground false during dev to show lines -->
  <Cell
    dontUseTableCellBackground="true"
    color="rgba(0,0,0,0)"
    padding="0 0 0 0" />
  <Image
    preserveAspect="true" />
  <Image class="die_image_active" active = "true" />
  <Image class="die_image_inactive" active = "false" />
  <!-- HUD specifics -->
  <Text class="hud_header"
    color="rgb(0.8,0.8,0)"
    fontSize="14"/>
  <Image class="hud_image" active="false"
    image="Myst" />
  <!-- Alteration dialog specifics -->
  <Text class="alt_action_btn_txt"
    color="rgb(0.8,0.8,0)"
    fontSize="20"/>
  <!-- Score dialog stuffs -->
  <Row class="score_data_row"
      preferredHeight="50" />
</Defaults>

  <!-- Start Panel -->
  <Panel id="startPanel" active="false"
    height="160" width="300"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    showAnimation="Grow" hideAnimation="Shrink">
    <VerticalLayout>
      <Panel class="title">
        <Text class="title"> After all players seated</Text>
      </Panel>
      <VerticalLayout class="buttonList">
        <Panel padding="40 40 0 0">
          <Button onClick="startGameBtn">Start Game</Button>
        </Panel>
      </VerticalLayout>
    </VerticalLayout>
  </Panel>

  <!-- Select Class Board Panel -->
  <Panel id="selectClassBoardPanel" active="false"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="0 300"
    height="180" width="600"
    showAnimation="Grow" hideAnimation="Shrink">
    <TableLayout class="base_table">
      <Row preferredHeight="60"  class="base_table_row" color="rgba(0,0,0,0)">
        <Cell columnSpan="4">
          <Panel class="title">
            <Text class="title"> Select and place class board in following order:</Text>
          </Panel>
        </Cell>
      </Row>
      <Row preferredHeight="80" class="base_table_row">
        <Cell padding="20 10 20 0">
          <Panel id="selectClass_1_panel" color="Blue" image="Sprites/Layout/Viewport">
            <Text id="selectClass_1_text" class="title" color="White" text="Blue"/>
          </Panel>
        </Cell>
        <Cell padding="10 10 20 0">
          <Panel id="selectClass_2_panel" color="Red" image="Sprites/Layout/Viewport">
            <Text id="selectClass_2_text" class="title" color="White" text="Red"/>
          </Panel>
        </Cell>
        <Cell padding="10 10 20 0">
          <Panel id="selectClass_3_panel" color="Yellow" image="Sprites/Layout/Viewport">
            <Text id="selectClass_3_text" class="title" color="White" text="Yellow"/>
          </Panel>
        </Cell>
        <Cell padding="10 20 20 0">
          <Panel id="selectClass_4_panel" color="Green" image="Sprites/Layout/Viewport">
            <Text id="selectClass_4_text" class="title" color="White" text="Green"/>
          </Panel>
        </Cell>
      </Row>
      <Row preferredHeight="40"  class="base_table_row">
        <Cell><Text id="selectClassLocation_1_text" class="title" text="1"/></Cell>
        <Cell><Text id="selectClassLocation_2_text" class="title" text="2"/></Cell>
        <Cell><Text id="selectClassLocation_3_text" class="title" text="3"/></Cell>
        <Cell><Text id="selectClassLocation_4_text" class="title" text="4"/></Cell>
      </Row>
    </TableLayout>
  </Panel>

