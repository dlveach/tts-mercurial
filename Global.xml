<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout UI/XmlLayout/Configuration/XmlLayout.xsd">

  <Include src="XML_defaults.xml"/>

  <!-- Start Panel -->
  <Panel id="startPanel" active="false"
    height="160" width="300"
    showAnimation="Grow" hideAnimation="Shrink">
    <VerticalLayout>
      <Panel class="title">
        <Text class="title"> After all players seated</Text>
      </Panel>
      <VerticalLayout class="buttonList">
        <Panel padding="40 40 0 0">
          <Button onClick="startGameBtn">Start Game</Button>
        </Panel>
      </VerticalLayout>
    </VerticalLayout>
  </Panel>

  <!-- Alteration card discard dialog -->
  <Panel id="alterationDiscardPanel" active="false"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="0 200"
    height="140" width="400">
    <VerticalLayout image="Sprites/Layout/Viewport" color="#301616">
      <Panel class="title">
        <Text class="title">Choose Alteration Card Action:</Text>
      </Panel>
      <HorizontalLayout padding="10">
        <Button id="alteration_play_btn" onClick="alterationActionBtn">Play</Button>
        <Button id="alteration_discard_btn" onClick="alterationActionBtn">Discard</Button>
        <Button id="alteration_cancel_btn" onClick="alterationActionBtn">Cancel</Button>
      </HorizontalLayout>
    </VerticalLayout>
  </Panel>

  <!-- Select Class Board Panel -->
  <Panel id="selectClassBoardPanel" active="false"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="0 300"
    height="180" width="600"
    showAnimation="Grow" hideAnimation="Shrink">
    <TableLayout class="base_table">
      <Row preferredHeight="60"  class="base_table_row" color="rgba(0,0,0,0)">
        <Cell columnSpan="4">
          <Panel class="title">
            <Text class="title"> Select and place class board in following order:</Text>
          </Panel>
        </Cell>
      </Row>
      <Row preferredHeight="80" class="base_table_row">
        <Cell padding="20 10 20 0">
          <Panel id="selectClass_1_panel" color="Blue" image="Sprites/Layout/Viewport">
            <Text id="selectClass_1_text" class="title" color="White" text="Blue"/>
          </Panel>
        </Cell>
        <Cell padding="10 10 20 0">
          <Panel id="selectClass_2_panel" color="Red" image="Sprites/Layout/Viewport">
            <Text id="selectClass_2_text" class="title" color="White" text="Red"/>
          </Panel>
        </Cell>
        <Cell padding="10 10 20 0">
          <Panel id="selectClass_3_panel" color="Yellow" image="Sprites/Layout/Viewport">
            <Text id="selectClass_3_text" class="title" color="White" text="Yellow"/>
          </Panel>
        </Cell>
        <Cell padding="10 20 20 0">
          <Panel id="selectClass_4_panel" color="Green" image="Sprites/Layout/Viewport">
            <Text id="selectClass_4_text" class="title" color="White" text="Green"/>
          </Panel>
        </Cell>
      </Row>
      <Row preferredHeight="40"  class="base_table_row">
        <Cell><Text id="selectClassLocation_1_text" class="title" text="1"/></Cell>
        <Cell><Text id="selectClassLocation_2_text" class="title" text="2"/></Cell>
        <Cell><Text id="selectClassLocation_3_text" class="title" text="3"/></Cell>
        <Cell><Text id="selectClassLocation_4_text" class="title" text="4"/></Cell>
      </Row>
    </TableLayout>
  </Panel>

  <!-- Final Scoring table -->
  <Panel id="score_panel" active="false" width="900" height="360"
        showAnimation="Grow" hideAnimation="Shrink">
      <TableLayout class="score_table">
          <Row id="table_1_title_row" class="title_row">
              <Cell class="header_cell" columnSpan="7">
                  <Text id="table_1_title_text" class="table_title_text" text="Final Scoring" />
              </Cell>
          </Row>
          <Row id="score_table_header" class="table_header_row">
              <Cell class="header_cell">
                  <Text id="score_table_header_text_1" class="table_header_text" text="Player" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_2" class="table_header_text" text="Class" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_3" class="table_header_text" text="Heroics" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_4" class="table_header_text" text="Sigils" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_5" class="table_header_text" text="Prestige" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_6" class="table_header_text" text="Arcanas" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_7" class="table_header_text" text="Total" />
              </Cell>
          </Row>
          <Row id="score_table_row_1" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

          <Row id="score_table_row_2" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

          <Row id="score_table_row_3" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

          <Row id="score_table_row_4" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

      </TableLayout>
  </Panel>

  <!-- HUD panel -->
  <Panel id="outer_hud_panel" active="false"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="-750 350"
    color="rgb(0.7,0.3,0)"
    image="Sprites/Layout/Viewport"
    height="260" width="420">
    <Panel id="inner_hud_panel" height="240" width="400">
      <TableLayout class="hud_table">
        <Row class="hud_title_row">
          <Cell><Text class="hud_header" text="Player"/></Cell>
          <Cell columnSpan="2"><Text class="hud_header" text="Spell Power"/></Cell>
          <Cell><Text class="hud_header" text="Heroics"/></Cell>
          <Cell><Text class="hud_header" text="Score"/></Cell>
        </Row>
        <Row id="hud_row_1" class="hud_data_row">
          <Cell><Text id="hud_row_1_player" fontSize="18" text="Red" color="Red"/></Cell>
          <Cell><Text id="hud_row_1_spell" class="hud_row" text="0"/></Cell>
          <Cell padding="0 20 0 0"><Image id="hud_row_1_image" class="hud_image"/></Cell>
          <Cell><Text id="hud_row_1_heroics" class="hud_row" text=""/></Cell>
          <Cell><Text id="hud_row_1_score" class="hud_row" text="0"/></Cell>
        </Row>
        <Row id="hud_row_2" class="hud_data_row">
          <Cell><Text id="hud_row_2_player" fontSize="18" text="Blue" color="Blue"/></Cell>
          <Cell><Text id="hud_row_2_spell" class="hud_row" text="0"/></Cell>
          <Cell padding="0 20 0 0"><Image id="hud_row_2_image" class="hud_image"/></Cell>
          <Cell><Text id="hud_row_2_heroics" class="hud_row" text=""/></Cell>
          <Cell><Text id="hud_row_2_score" class="hud_row" text="0"/></Cell>
        </Row>
        <Row id="hud_row_3" class="hud_data_row">
          <Cell><Text id="hud_row_3_player" fontSize="18" text="Green" color="Green"/></Cell>
          <Cell><Text id="hud_row_3_spell" class="hud_row" text="0"/></Cell>
          <Cell padding="0 20 0 0"><Image id="hud_row_3_image" class="hud_image"/></Cell>
          <Cell><Text id="hud_row_3_heroics" class="hud_row" text=""/></Cell>
          <Cell><Text id="hud_row_3_score" class="hud_row" text="0"/></Cell>
        </Row>
        <Row id="hud_row_4" class="hud_data_row">
          <Cell><Text id="hud_row_4_player" fontSize="18" text="Yellow" color="Yellow"/></Cell>
          <Cell><Text id="hud_row_4_spell" class="hud_row" text="0"/></Cell>
          <Cell padding="0 20 0 0"><Image id="hud_row_4_image" class="hud_image"/></Cell>
          <Cell><Text id="hud_row_4_heroics" class="hud_row" text=""/></Cell>
          <Cell><Text id="hud_row_4_score" class="hud_row" text="0"/></Cell>
        </Row>
        <Row preferredHeight="30" class="hud_title_row" visibility="Red">
          <Cell columnSpan="5"><Text class="hud_header" text="Player Red unallocated dice"/></Cell>
        </Row>
        <Row preferredHeight="30" class="hud_title_row" visibility="Blue">
          <Cell columnSpan="5"><Text class="hud_header" text="Player Blue unallocated dice"/></Cell>
        </Row>
        <Row preferredHeight="30" class="hud_title_row" visibility="Green">
          <Cell columnSpan="5"><Text class="hud_header" text="Player Green unallocated dice"/></Cell>
        </Row>
        <Row preferredHeight="30" class="hud_title_row" visibility="Yellow">
          <Cell columnSpan="5"><Text class="hud_header" text="Player Yellow unallocated dice"/></Cell>
        </Row>
        <Row id="Red_hud_dice_row" preferredHeight="60" visibility="Red">
          <Cell columnSpan="5">
            <HorizontalLayout padding="10">
              <Image id="Red_hud_die_1_image" class="die_image_inactive" />
              <Image id="Red_hud_die_2_image" class="die_image_inactive" />
              <Image id="Red_hud_die_3_image" class="die_image_inactive" />
              <Image id="Red_hud_die_4_image" class="die_image_inactive" />
              <Image id="Red_hud_die_5_image" class="die_image_inactive" />
              <Image id="Red_hud_die_6_image" class="die_image_inactive" />
              <Image id="Red_hud_die_7_image" class="die_image_inactive" />
            </HorizontalLayout>
          </Cell>
        </Row>
        <Row id="Blue_hud_dice_row" preferredHeight="60" visibility="Blue">
          <Cell columnSpan="5">
            <HorizontalLayout padding="10">
              <Image id="Blue_hud_die_1_image" class="die_image_inactive" />
              <Image id="Blue_hud_die_2_image" class="die_image_inactive" />
              <Image id="Blue_hud_die_3_image" class="die_image_inactive" />
              <Image id="Blue_hud_die_4_image" class="die_image_inactive" />
              <Image id="Blue_hud_die_5_image" class="die_image_inactive" />
              <Image id="Blue_hud_die_6_image" class="die_image_inactive" />
              <Image id="Blue_hud_die_7_image" class="die_image_inactive" />
            </HorizontalLayout>
          </Cell>
        </Row>
        <Row id="Green_hud_dice_row" preferredHeight="60" visibility="Green">
          <Cell columnSpan="5">
            <HorizontalLayout padding="10">
              <Image id="Green_hud_die_1_image" class="die_image_inactive" />
              <Image id="Green_hud_die_2_image" class="die_image_inactive" />
              <Image id="Green_hud_die_3_image" class="die_image_inactive" />
              <Image id="Green_hud_die_4_image" class="die_image_inactive" />
              <Image id="Green_hud_die_5_image" class="die_image_inactive" />
              <Image id="Green_hud_die_6_image" class="die_image_inactive" />
              <Image id="Green_hud_die_7_image" class="die_image_inactive" />
            </HorizontalLayout>
          </Cell>
        </Row>
        <Row id="Yellow_hud_dice_row" preferredHeight="60" visibility="Yellow">
          <Cell columnSpan="5">
            <HorizontalLayout padding="10">
              <Image id="Yellow_hud_die_1_image" class="die_image_inactive" />
              <Image id="Yellow_hud_die_2_image" class="die_image_inactive" />
              <Image id="Yellow_hud_die_3_image" class="die_image_inactive" />
              <Image id="Yellow_hud_die_4_image" class="die_image_inactive" />
              <Image id="Yellow_hud_die_5_image" class="die_image_inactive" />
              <Image id="Yellow_hud_die_6_image" class="die_image_inactive" />
              <Image id="Yellow_hud_die_7_image" class="die_image_inactive" />
            </HorizontalLayout>
          </Cell>
        </Row>
      </TableLayout>
    </Panel>
  </Panel>

  <!-- Heroics panel -->
  <Panel id="outer_heroic_panel" active="false"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="0 350"
    color="rgb(0.7,0.3,0)"
    image="Sprites/Layout/Viewport"
    height="350" width="920">
    <Panel id="inner_heroic_panel" height="330" width="900">
      <TableLayout class="heroics_table">
        <Row preferredHeight="30" >
          <Cell columnSpan="6">
            <Text class="hud_header">Claim one Heroic card</Text>
          </Cell>
        </Row>
        <Row preferredHeight="240">
          <Cell padding="10 5 5 5">
            <Image id="heroic_1_image" preserveAspect="true" image="Heroic-1"/>
          </Cell>
          <Cell padding="5 5 5 5">
            <Image id="heroic_2_image" preserveAspect="true" image="Heroic-2"/>
          </Cell>
          <Cell padding="5 5 5 5">
            <Image id="heroic_3_image" preserveAspect="true" image="Heroic-3"/>
          </Cell>
          <Cell padding="5 5 5 5">
            <Image id="heroic_4_image" preserveAspect="true" image="Heroic-4"/>
          </Cell>
          <Cell padding="5 5 5 5">
            <Image id="heroic_5_image" preserveAspect="true" image="Heroic-5"/>
          </Cell>
          <Cell padding="5 10 5 5">
            <Image id="heroic_6_image" preserveAspect="true" image="Heroic-6"/>
          </Cell>
        </Row>
        <Row preferredHeight="60">
          <Cell padding="30 30 10 10">
            <Panel id="heroic_1_button_panel">
              <Button id="heroic_1_take" onClick="takeHeroicBtn">Claim</Button>
            </Panel>
          </Cell>
          <Cell padding="30 30 10 10">
            <Panel id="heroic_2_button_panel">
              <Button id="heroic_2_take" onClick="takeHeroicBtn">Claim</Button>
            </Panel>
          </Cell>
          <Cell padding="30 30 10 10">
            <Panel id="heroic_3_button_panel">
              <Button id="heroic_3_take" onClick="takeHeroicBtn">Claim</Button>
            </Panel>
          </Cell>
          <Cell padding="30 30 10 10">
            <Panel id="heroic_4_button_panel">
              <Button id="heroic_4_take" onClick="takeHeroicBtn">Claim</Button>
            </Panel>
          </Cell>
          <Cell padding="30 30 10 10">
            <Panel id="heroic_5_button_panel">
              <Button id="heroic_5_take" onClick="takeHeroicBtn">Claim</Button>
            </Panel>
          </Cell>
          <Cell padding="30 30 10 10">
            <Panel id="heroic_6_button_panel">
              <Button id="heroic_6_take" onClick="takeHeroicBtn">Claim</Button>
            </Panel>
          </Cell>
        </Row>
      </TableLayout>
    </Panel>
  </Panel>

</XmlLayout>
