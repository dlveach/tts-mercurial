<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout UI/XmlLayout/Configuration/XmlLayout.xsd">

  <Include src="XML_defaults.xml"/>

  <!-- Start Panel -->
  <Panel id="startPanel" active="false"
    height="160" width="300"
    showAnimation="Grow" hideAnimation="Shrink">
    <VerticalLayout>
      <Panel class="title">
        <Text class="title"> After all players seated</Text>
      </Panel>
      <VerticalLayout class="buttonList">
        <Panel padding="40 40 0 0">
          <Button onClick="startGameBtn">Start Game</Button>
        </Panel>
      </VerticalLayout>
    </VerticalLayout>
  </Panel>

  <!-- Alteration card discard dialog -->
  <Panel id="alterationDiscardPanel" active="false"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="0 200"
    height="140" width="400">
    <VerticalLayout image="Sprites/Layout/Viewport" color="#301616">
      <Panel class="title">
        <Text class="title">Choose Alteration Card Action:</Text>
      </Panel>
      <HorizontalLayout padding="10">
        <Button id="alteration_play_btn" onClick="alterationActionBtn">Play</Button>
        <Button id="alteration_discard_btn" onClick="alterationActionBtn">Discard</Button>
        <Button id="alteration_cancel_btn" onClick="alterationActionBtn">Cancel</Button>
      </HorizontalLayout>
    </VerticalLayout>
  </Panel>

  <!-- Select Class Board Panel -->
  <Panel id="selectClassBoardPanel" active="false"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    offsetXY="0 300"
    height="180" width="600"
    showAnimation="Grow" hideAnimation="Shrink">
    <TableLayout class="base_table">
      <Row preferredHeight="60"  class="base_table_row" color="rgba(0,0,0,0)">
        <Cell columnSpan="4">
          <Panel class="title">
            <Text class="title"> Select and place class board in following order:</Text>
          </Panel>
        </Cell>
      </Row>
      <Row preferredHeight="80" class="base_table_row">
        <Cell padding="20 10 20 0">
          <Panel id="selectClass_1_panel" color="Blue" image="Sprites/Layout/Viewport">
            <Text id="selectClass_1_text" class="title" color="White" text="Blue"/>
          </Panel>
        </Cell>
        <Cell padding="10 10 20 0">
          <Panel id="selectClass_2_panel" color="Red" image="Sprites/Layout/Viewport">
            <Text id="selectClass_2_text" class="title" color="White" text="Red"/>
          </Panel>
        </Cell>
        <Cell padding="10 10 20 0">
          <Panel id="selectClass_3_panel" color="Yellow" image="Sprites/Layout/Viewport">
            <Text id="selectClass_3_text" class="title" color="White" text="Yellow"/>
          </Panel>
        </Cell>
        <Cell padding="10 20 20 0">
          <Panel id="selectClass_4_panel" color="Green" image="Sprites/Layout/Viewport">
            <Text id="selectClass_4_text" class="title" color="White" text="Green"/>
          </Panel>
        </Cell>
      </Row>
      <Row preferredHeight="40"  class="base_table_row">
        <Cell><Text id="selectClassLocation_1_text" class="title" text="1"/></Cell>
        <Cell><Text id="selectClassLocation_2_text" class="title" text="2"/></Cell>
        <Cell><Text id="selectClassLocation_3_text" class="title" text="3"/></Cell>
        <Cell><Text id="selectClassLocation_4_text" class="title" text="4"/></Cell>
      </Row>
    </TableLayout>
  </Panel>

  <!-- Final Scoring table -->
  <Panel id="score_panel" active="false" width="900" height="360"
        showAnimation="Grow" hideAnimation="Shrink">
      <TableLayout class="score_table">
          <Row id="table_1_title_row" class="title_row">
              <Cell class="header_cell" columnSpan="7">
                  <Text id="table_1_title_text" class="table_title_text" text="Final Scoring" />
              </Cell>
          </Row>
          <Row id="score_table_header" class="table_header_row">
              <Cell class="header_cell">
                  <Text id="score_table_header_text_1" class="table_header_text" text="Player" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_2" class="table_header_text" text="Class" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_3" class="table_header_text" text="Heroics" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_4" class="table_header_text" text="Sigils" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_5" class="table_header_text" text="Prestige" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_6" class="table_header_text" text="Arcanas" />
              </Cell>
              <Cell class="header_cell">
                  <Text id="score_table_header_text_7" class="table_header_text" text="Total" />
              </Cell>
          </Row>
          <Row id="score_table_row_1" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_1_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

          <Row id="score_table_row_2" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_2_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

          <Row id="score_table_row_3" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_3_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

          <Row id="score_table_row_4" active="true" class="table_data_row">
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_1" class="table_data_text" text="color"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_2" class="table_data_text" text="class"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_3" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_4" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_5" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_6" class="table_data_text" text="0"/>
              </Cell>
              <Cell class="table_cell">
                  <Text id="score_table_row_4_text_7" class="table_data_text" text="0"/>
              </Cell>
          </Row>

      </TableLayout>
  </Panel>

</XmlLayout>
