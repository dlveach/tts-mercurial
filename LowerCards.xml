<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout UI/XmlLayout/Configuration/XmlLayout.xsd">

<Include src="XML_defaults.xml"/>

<Defaults>
  <!-- overall defaults -->
  <Panel class="main" active="false"
    height="40" width="640"
    rotation="0 0 180"
    scale="0.5 0.5" />
  <Panel class="inner"
    padding="10 5 0 0" />
  <Button class="take_button"
    fontSize="20"
    text="Take" />
  <Button class="undo_button"
    fontSize="20"
    text="Return" />
  <!-- Alterations acuity -->
  <Panel class="alt_acuity"
    padding="5 10 0 0" />
  <Text class="alt_acuity"
    color="rgb(1,1,0)"
    alignment="MiddleLeft"
    fontSize="20"
    text="-" />
  <HorizontalLayout class="alt_acuity"
    spacing="0"
    padding="0 10 7 7"
    color="rgb(0.7,0.3,0)"
    image="Sprites/Layout/Viewport"/>
  <!-- Recycle leftmost spell button -->
  <Panel class="recycle" active="false"
    height="40" width="100"
    rotation="0 0 180"
    scale="0.5 0.5" />

</Defaults>

