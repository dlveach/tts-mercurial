<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout UI/XmlLayout/Configuration/XmlLayout.xsd">

<Include src="XML_defaults.xml"/>

<Defaults>
  <!-- overall defaults -->
  <Panel class="main" active="false"
    height="40" width="730"
    rotation="0 0 180"
    scale="0.5 0.5" />
  <Panel class="inner"
    padding="10 5 0 0" />
  <Button class="take_button"
    fontSize="20"
    onClick="Global/takeHeroicBtn"
    text="Take" />
  <!-- arcana buttons -->
  <Panel class="arcana_main" active="false"
    height="40" width="570"
    rotation="0 0 180"
    scale="0.5 0.5" />
  <Panel class="arcana_inner"
    padding="40 40 0 0" />
  <Button class="arcana_take"
    fontSize="20"
    onClick="Global/takeArcanaBtn"
    text="Take" />
</Defaults>

<Panel id="heroics_pnl" class="main" position="30 130 -6" >
  <HorizontalLayout>
    <Panel>
      <Panel id="heroics_1_pnl" class="inner">
        <Button id="heroics_1_btn" class="take_button" />
      </Panel>
    </Panel>
    <Panel>
      <Panel id="heroics_2_pnl" class="inner">
        <Button id="heroics_2_btn" class="take_button" />
      </Panel>
    </Panel>
    <Panel>
      <Panel id="heroics_3_pnl" class="inner">
        <Button id="heroics_3_btn" class="take_button" />
      </Panel>
    </Panel>
    <Panel>
      <Panel id="heroics_4_pnl" class="inner">
        <Button id="heroics_4_btn" class="take_button" />
      </Panel>
    </Panel>
    <Panel>
      <Panel id="heroics_5_pnl" class="inner">
        <Button id="heroics_5_btn" class="take_button" />
      </Panel>
    </Panel>
    <Panel>
      <Panel id="heroics_6_pnl" class="inner">
        <Button id="heroics_6_btn" class="take_button" />
      </Panel>
    </Panel>
  </HorizontalLayout>
</Panel>

<Panel id="arcanas_pnl" class="arcana_main" position="60 -75 -6" >
  <HorizontalLayout spacing="30">
    <Panel>
      <Panel id="arcana_1_pnl" class="arcana_inner">
        <Button id="arcana_1_btn" class="arcana_take" />
      </Panel>
    </Panel>
    <Panel>
      <Panel id="arcana_2_pnl" class="arcana_inner">
        <Button id="arcana_2_btn" class="arcana_take" />
      </Panel>
    </Panel>
    <Panel>
      <Panel id="arcana_3_pnl" class="arcana_inner">
        <Button id="arcana_3_btn" class="arcana_take" />
      </Panel>
    </Panel>
  </HorizontalLayout>
</Panel>

</XmlLayout>
