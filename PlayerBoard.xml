<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout UI/XmlLayout/Configuration/XmlLayout.xsd">

<Include src="XML_defaults.xml"/>

<Defaults>

  <Text
    font="Arial Bold"
    color="rgb(.9,0.9,0)"
    shadow="rgba(0,0,0,1)" />

  <Panel class="player_board_acuity_edit"
    color="rgba(0,0,0,0)"
    rotation="0 0 180"  />

  <Panel  class="player_board_text"
    active="true"
    height="60" width="60"
    rectAlignment="middleCenter"
    rotation="0 0 180"
    scale="0.5 0.5"/>

  <Panel  class="player_board_text_small"
    active="true"
    height="50" width="50"
    rectAlignment="middleCenter"
    rotation="0 0 180"
    scale="0.5 0.5" />

  <Panel class="player_board_sigil"
    height="60" width="60"
    scale="0.5 0.5" />

  <Panel  class="player_board_button"
    active="true"
    rotation="0 0 180"
    height="10" width="15"  />

  <Text class="player_board_restore"
    fontSize="28"
    color="#08A4C1"
    alignment="MiddleCenter"  />

  <Text class="player_board_restore_small"
    fontSize="24"
    color="#08A4C1"
    alignment="MiddleCenter"  />

  <Text class="player_board_ruin"
    fontSize="28"
    color="#B81717"
    alignment="MiddleCenter"  />

  <Text class="player_board_ruin_small"
    fontSize="24"
    color="#B81717"
    alignment="MiddleCenter"  />

  <Text class="player_board_myst"
    fontSize="28"
    color="#099139"
    alignment="MiddleCenter"  />

  <Text class="player_board_sigil"
    fontSize="24"
    color="rgb(0.8 0.8 0.8)"
    alignment="MiddleCenter"  />

  <Text class="player_board_prestige"
    fontSize="24"
    color="rgb(0.74,0.74,0.31)"
    alignment="MiddleCenter"  />

  <TableLayout class="edit_acuity_table"
    autoCalculateHeight="true"
    image="Sprites/Layout/Viewport"
    useGlobalCellPadding="false"
    columnWidths="0 60 40 90 90"
    color="#301616" />

  <Cell
    dontUseTableCellBackground="true"
    color="rgba(0,0,0,0)"
    padding="0 0 0 0" />

</Defaults>

