<XmlLayout xmlns="http://www.w3schools.com"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:noNamespaceSchemaLocation="../../../Configuration/XmlLayout.xsd"
   showAnimation="Grow" hideAnimation="FadeOut">

<Defaults>

  <Panel  active="false"
          rectAlignment="middleCenter"
          rotation="180 0 0"  />

  <Panel  class="button_panel"
          active="false"
          rotation="180 0 0"
          height="20" width="40"  />
          
  <Button font="Arial Bold"
          fontSize="20"
          image="Sprites/Layout/Button"
          colors="rgb(0.1,0.3,0.4|rgb(0.1,0.5,0.7|rgb(0.1,0.5,0.7" 
          textColor="rgb(0,1,1)"
          textShadow="rgba(0,0,0,0.5)"/>    

  <Button class="hidden"
          color="rgba(0,0,0,0)" 
          width="70" height="50" />

  <Text class="restore" 
        fontSize="25" 
        color="#08A4C1"
        alignment="MiddleCenter"  />

  <Text class="restore_small" 
        fontSize="20" 
        color="#08A4C1"
        alignment="MiddleCenter"  />

  <Text class="ruin" 
        fontSize="25" 
        color="#B81717"
        alignment="MiddleCenter"  />

  <Text class="ruin_small" 
        fontSize="20" 
        color="#B81717"
        alignment="MiddleCenter"  />

  <Text class="myst" 
        fontSize="25" 
        color="#099139"
        alignment="MiddleCenter"  />

  <Text class="score" 
        fontSize="25" 
        color="#aaa9ad"
        alignment="MiddleCenter"  />

</Defaults>

