<Panel class="player_board_acuity_edit" active="false"
  id="acuity_edit_pnl"
  height="120" width="180"
  position="-170 -125 -10"
  scale="0.5 0.5">
  <TableLayout class="edit_acuity_table"
    columnWidths="25 125 30">
    <Row preferredHeight="20">
      <Cell columnSpan="3">
        <Text fontSize="12" color="rgb(0.8,0.8,0.8)" text="Pay Acuity for Restore/Ruin"/>
      </Cell>
    </Row>
    <Row preferredHeight="35">
      <Cell>
        <Image preserveAspect="true" image="Restore"/>
      </Cell>
      <Cell padding="10 10 2 4">
        <HorizontalLayout spacing="15">
          <Button id="dec_restore_acuity_btn" fontSize="16" text="-3" onClick="editAcuityBtn"/>
          <Button id="inc_restore_acuity_btn" fontSize="16" text="+3" onClick="editAcuityBtn"/>
        </HorizontalLayout>
      </Cell>
      <Cell>
        <Text id="restore_acuity_txt" class="player_board_restore" fontSize="20" text="0"/>
      </Cell>
    </Row>
    <Row preferredHeight="35">
      <Cell>
        <Image preserveAspect="true" image="Ruin"/>
      </Cell>
      <Cell padding="10 10 2 4">
        <HorizontalLayout spacing="15">
          <Button id="dec_ruin_acuity_btn" fontSize="16" text="-4" onClick="editAcuityBtn"/>
          <Button id="inc_ruin_acuity_btn" fontSize="16" text="+4" onClick="editAcuityBtn"/>
        </HorizontalLayout>
      </Cell>
      <Cell>
        <Text id="ruin_acuity_txt" class="player_board_ruin" fontSize="20" text="0"/>
      </Cell>
    </Row>
    <Row preferredHeight="30">
      <Cell columnSpan="3" padding="10 10 5 0">
        <HorizontalLayout spacing="25">
          <Button id="cancel_acuity_btn" fontSize="14" text="Cancel" onClick="editAcuityBtn"/>
          <Button id="done_acuity_btn" fontSize="14" text="Done" onClick="editAcuityBtn"/>
        </HorizontalLayout>
      </Cell>
    </Row>
  </TableLayout>
</Panel>

