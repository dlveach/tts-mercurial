<Defaults>

  <Text
    fontSize="16"
    font="Arial Bold"
    color="rgb(0.9,0.9,0.9)"
    shadow="rgb(0,0,0)" />

  <Panel class="title"
    color="rgb(0.8,0.4,0)"
    preferredHeight="16"
    image="Sprites/Layout/Title" />

  <VerticalLayout class="buttonList"
    spacing="16"
    padding="30"
    image="Sprites/Layout/Viewport"
    color="#301616" />

  <Button hoverClass="hover"
    pressClass="press"
    selectClass="select"
    color="rgb(0.7,0.3,0)"
    textColor="rgb(0.9,0.9,0)"
    fontSize="20"
    font="Arial Bold"
    image="Sprites/Layout/Button"
    textShadow="rgba(0,0,0,0.5)" />
  <Button class="hover"
    color="rgb(01,0.4,0)"
    textColor="rgb(1,1,0)"
    textShadow="rgba(0,0,0,1)"/>
  <Button class="press"
    color="rgb(0.4,0.1,0)"
    textColor="rgb(1,1,0)" />
  <Button class="select"
    color="rgb(0.4,0.1,0)"
    textColor="rgb(1,1,0)" />

  <Button class="hidden"
    color="rgba(0,0,0,0)"
    width="70" height="50" />

  <Text class="title"
    fontSize="24"
    font="Arial Bold"
    color="rgb(.9,0.9,0)"
    shadow="rgba(0,0,0,1)" />

  <TableLayout class="base_table"
    image="Sprites/Layout/Viewport"
    useGlobalCellPadding="false"
    color="rgba(0,0,0,0)" />

  <Row class="base_table_row"
    dontUseTableRowBackground="true"
    color="#301616" />

  <!-- Cell dontUseTableCellBackground false during dev to show lines TODO: move to files-->
  <Cell
    dontUseTableCellBackground="true"
    color="rgba(0,0,0,0)"
    padding="0 0 0 0" />

</Defaults>
