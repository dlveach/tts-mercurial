<Defaults>

  <Panel  class="class_board_text"
          active="false"
          rectAlignment="middleCenter"
          rotation="180 0 0"  />

  <Panel  class="class_board_button"
          active="false"
          rotation="180 0 0"
          height="10" width="15"  />

  <Panel  class="title"
          color="rgb(0.8,0.4,0)"
          preferredHeight="16"
          image="Sprites/Layout/Title" />

  <VerticalLayout class="buttonList"
                  spacing="16"
                  padding="30"
                  image="Sprites/Layout/Viewport"
                  color="rgb(0.4,0.1,0)" />

  <Button hoverClass="hover"
          pressClass="press"
          selectClass="select"
          color="rgb(0.7,0.3,0)"
          textColor="rgb(0.9,0.9,0)"
          fontSize="20"
          font="Arial Bold"
          image="Sprites/Layout/Button"
          textShadow="rgba(0,0,0,0.5)" />
  <Button class="hover"
          color="rgb(01,0.4,0)"
          textColor="rgb(1,1,0)"
          textShadow="rgba(0,0,0,1)"/>
  <Button class="press"
          color="rgb(0.4,0.1,0)"
          textColor="rgb(1,1,0)" />
  <Button class="select"
          color="rgb(0.4,0.1,0)"
          textColor="rgb(1,1,0)" />

  <Button class="hidden"
          color="rgba(0,0,0,0)"
          width="70" height="50" />

  <Text class="title"
        fontSize="24"
        font="Arial Bold"
        color="rgb(.9,0.9,0)"
        shadow="rgba(0,0,0,1)" />

  <Text class="restore"
        fontSize="25"
        color="#08A4C1"
        alignment="MiddleCenter"  />

  <Text class="restore_small"
        fontSize="20"
        color="#08A4C1"
        alignment="MiddleCenter"  />

  <Text class="ruin"
        fontSize="25"
        color="#B81717"
        alignment="MiddleCenter"  />

  <Text class="ruin_small"
        fontSize="20"
        color="#B81717"
        alignment="MiddleCenter"  />

  <Text class="myst"
        fontSize="25"
        color="#099139"
        alignment="MiddleCenter"  />

  <Text class="score"
        fontSize="25"
        color="#aaa9ad"
        alignment="MiddleCenter"  />

  <Text class="sigils"
        fontSize="25"
        color="rgb(0.74,0.74,0.31)"
        alignment="MiddleCenter"  />

  <TableLayout class="base_table"
      image="Sprites/Layout/Viewport"
      useGlobalCellPadding="false"
      color="rgba(0,0,0,0)" />

  <Row class="base_table_row"
    dontUseTableRowBackground="true"
    color="#301616" />

  <!-- Cell dontUseTableCellBackground false during dev to show lines -->
  <Cell
    dontUseTableCellBackground="true"
    color="rgba(0,0,0,0)"
    padding="0 0 0 0" />

  <!-- HUD stuffs -->
  <Text class="hud_header"
    fontSize="14"
    font="Arial Bold"
    color="rgb(0.8,0.8,0"
    shadow="rgb(0,0,0)" />

  <Text class="hud_row"
    fontSize="16"
    font="Arial Bold"
    color="rgb(0.9,0.9,0.9)"
    shadow="rgb(0,0,0)" />

  <Image class="hud_image"
    active="false"
    image="Myst"
    preserveAspect="true" />

  <TableLayout class="hud_table"
    autoCalculateHeight="true"
    image="Sprites/Layout/Viewport"
    useGlobalCellPadding="false"
    columnWidths="0 60 40 90 90"
    color="#301616" />

  <Row class="hud_title_row"
    dontUseTableRowBackground="true"
    image="Sprites/Layout/Title"
    color="rgb(0.7,0.3,0)"
    preferredHeight="30" />

  <Row class="hud_data_row"
    preferredHeight="30" />

  <Row class="hud_dice_row"
    preferredHeight="60" />

  <Row class="hud_resource_row"
    preferredHeight="40" />

  <Row class="hud_sigils_row"
    preferredHeight="60" />


  <Image class="die_image"
      preserveAspect="true" />

  <Image class="die_image_active"
    preserveAspect="true"
    active = "true" />

  <Image class="die_image_inactive"
    preserveAspect="true"
    active = "false" />

  <!-- Pay spell cost dialog -->
  <TableLayout class="spell_cost"
    autoCalculateHeight="true"
    image="Sprites/Layout/Viewport"
    useGlobalCellPadding="false"
    color="#301616" />

  <!-- Heroic panel stuff -->
  <TableLayout class="heroics_table"
    autoCalculateHeight="true"
    image="Sprites/Layout/Viewport"
    useGlobalCellPadding="false"
    color="#301616" />

  <!-- Heroic card buttons -->
  <Button class="heroic_button"
    fontSize="40"
    text="Claim"
    onClick="Global/heroicsBtn"/>

  <!-- Alteration card stuffs -->
  <Panel class="alteration_card_acuity_panel"
    color="rgb(0.7,0.3,0)"
    raycastTarget="false"
    image="Sprites/Layout/Viewport"
    />

  <!-- Score table styles -->
  <TableLayout class="score_table"
      image="Sprites/Layout/Viewport"
      color="rgb(0.4,0.1,0)"
      padding="10 10 10 10"
      cellSpacing="5"
      cellPadding="0"
      columnWidths="140 150 0 0 0 0 0"/>

  <Row class="table_data_row"
      preferredHeight="50" />

  <Row class="table_header_row"
      preferredHeight="50" />

  <Row class="title_row"
      dontUseTableRowBackground="true"
      image="Sprites/Layout/Title"
      color="rgb(0.7,0.3,0)"
      preferredHeight="60" />

  <Cell class="table_cell"
      dontUseTableCellBackground="true"
      image="Sprites/Layout/Viewport"
      color="rgb(0.7,0.3,0)" />

  <Cell class="header_cell"
      dontUseTableCellBackground="true"
      color="rgba(0,0,0,0)" />

  <Text class="table_title_text"
      fontSize="28"
      font="Arial Bold"
      color="rgb(.9,0.9,0)"
      shadow="rgba(0,0,0,1)" />

  <Text class="table_data_text"
      fontSize="20"
      font="Arial Bold"
      color="rgb(0.9,0.9,0"
      shadow="rgb(0,0,0)" />

  <Text class="table_header_text"
      fontSize="20"
      font="Arial Bold"
      color="rgb(1,1,0"
      shadow="rgb(0,0,0)" />

</Defaults>
