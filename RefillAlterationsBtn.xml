<XmlLayout xmlns="http://www.w3schools.com"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:noNamespaceSchemaLocation="../../../Configuration/XmlLayout.xsd"
   showAnimation="Grow" hideAnimation="FadeOut">
<Include path="Xml/Styles.xml" />

<Defaults>
  <Panel color="rgb(0.1,0.4,0)" image="Sprites/Outline_Sharp" />
  <Button class="iconButton" image="Sprites/Layout/Base" iconColor="rgb(1,1,0)"
    iconHoverColor="rgb(1,1,0)" />
  <Button class="iconButtonWithText" iconWidth="48" padding="4 0 2 2"
    ignoreLayout="1" width="160" height="32" />


  <Button class="hl_button"
    colors="White|Cyan|#C8C8C8|rgba(0.78,0.78,0.78,0.5)" />
  <Row class="tableRow" preferredHeight="25" color="rgba(0,0,0,0.5)" />
  <Text class="small_text" fontSize="12" color="white"/>
  <Text class="med_text" fontSize="14" color="white"/>
  <Text class="med_large_text" fontSize="18" color="white"/>
  <Text class="large_text" fontSize="20" color="white" />
</Defaults>

<Panel id="button_panel" active="false"
  allowDragging="false"
  returnToOriginalPositionWhenReleased="false"
  rectAlignment="LowerCenter"
  position="0 -50 -100"
  rotation="0 0 0"
  height="40" width="160"
  color="rgba(0,0,0,0)"
  scale="1 1.5">
  <Button id="refill_alterations_btn_id" fontSize="60" height="140" width="200" onClick="Global/refillAlterationsBtn"
    class="ButtonWithText">Refill</Button>
</Panel>
</XmlLayout>