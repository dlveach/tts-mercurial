<XmlLayout xmlns="http://www.w3schools.com"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:noNamespaceSchemaLocation="../../../Configuration/XmlLayout.xsd">

   <Include src="XML_defaults.xml"/>

  <Panel id="cast_panel" active="true"
    color="#180f0b" height="135" width="155"
    rectAlignment="MiddleCenter" position="95 -30 1"
    rotation="180 0 0" scale="1 1">
