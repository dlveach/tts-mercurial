        <Cell/>
      </Row>
      <Row preferredHeight="35">
        <Cell columnspan="4">
          <TableLayout columnWidths="0 0 0 0">
            <Row>
              <Cell>
                <Image preserveAspect="true" image="Mana"/>
              </Cell>
              <Cell>
                <Text id="mana_text" color="white" alignment="MiddleLeft" fontSize="16" text="10"/>
              </Cell>
              <Cell>
                <Image preserveAspect="true" image="Acuity"/>
              </Cell>
              <Cell>
                <Text id="acuity_text" color="white" alignment="MiddleLeft" fontSize="16" text="10"/>
              </Cell>
            </Row>
          </TableLayout>
        </Cell>
      </Row>
